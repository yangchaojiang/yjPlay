<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <chuangyuan.ycj.videolibrary.widget.VideoPlayerView
        android:id="@+id/exo_play_context_id"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:color/transparent"
        app:auto_show="true"
        app:player_layout_id="@layout/simple_exo_view"
        app:player_load_layout_id="@layout/custom_exo_play_load"
        app:player_back_image="@drawable/ic_arrow_back_black_24dp"
        app:player_preview_layout_id="@layout/exo_default_preview_layout"
        app:player_custom_layout_id="@layout/simple_exo_barrage_view"
        app:controller_layout_id="@layout/custom_exo_playback_barrage_view"
        app:fastforward_increment="0"
        app:paddingEnd="0dp"
        app:paddingStart="0dp"
        app:resize_mode="fit"
        app:rewind_increment="0"
        app:show_timeout="3000"
        app:surface_type="texture_view"
        app:use_artwork="true"
        app:user_watermark="@mipmap/watermark_big"
          />
    <include android:id="@+id/media_controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/media_controller" />
</LinearLayout>
